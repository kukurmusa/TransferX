{
  "name": "transferx-ui",
  "private": true,
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.0",
    "htmx.org": "^1.9.12",
    "tailwindcss": "^4.0.0"
  },
  "scripts": {
    "dev:css": "npx @tailwindcss/cli -i ./src/static/src/input.css -o ./src/static/css/tailwind.css --watch",
    "build:css": "npx @tailwindcss/cli -i ./src/static/src/input.css -o ./src/static/css/tailwind.css --minify",
    "build:vendor": "node -e \"require('fs').mkdirSync('src/static/js',{recursive:true});require('fs').copyFileSync('node_modules/htmx.org/dist/htmx.min.js','src/static/js/htmx.min.js');\""
  }
}
