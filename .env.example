# ── Django ────────────────────────────────────────────────────────────────────
DJANGO_SETTINGS_MODULE=config.settings.production
SECRET_KEY=change-me-to-a-long-random-string

# ── Hosts & CSRF ──────────────────────────────────────────────────────────────
# Comma-separated list of allowed hostnames (no http/https prefix)
# Example: myapp.up.railway.app,www.myapp.com
ALLOWED_HOSTS=myapp.up.railway.app

# Comma-separated list of origins Django accepts for CSRF-protected requests
# Must include the http(s):// scheme
# Example: https://myapp.up.railway.app,https://www.myapp.com
CSRF_TRUSTED_ORIGINS=https://myapp.up.railway.app

# ── Database ──────────────────────────────────────────────────────────────────
# Railway injects DATABASE_URL automatically when a Postgres service is linked.
# When set it takes precedence over the individual POSTGRES_* vars below.
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Fallback individual vars (used when DATABASE_URL is not set, e.g. local Docker)
POSTGRES_DB=transferx
POSTGRES_USER=transferx
POSTGRES_PASSWORD=change-me
POSTGRES_HOST=db
POSTGRES_PORT=5432

# ── External APIs ─────────────────────────────────────────────────────────────
APISPORTS_KEY=
API_FOOTBALL_BASE_URL=https://v3.football.api-sports.io

# ── Feature flags ─────────────────────────────────────────────────────────────
TRANSFERX_ENABLE_ANTI_SNIPING=0
TRANSFERX_SNIPING_WINDOW_MINUTES=2
TRANSFERX_SNIPING_EXTEND_MINUTES=2
TRANSFERX_BID_RATE=10/m

# ── Gunicorn (optional tuning) ────────────────────────────────────────────────
# PORT is injected by Railway automatically — do not set it manually there.
# GUNICORN_WORKERS=2
# GUNICORN_TIMEOUT=120
